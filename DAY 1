# basic calculator
# Function to perform addition
add <- function(a, b) {
  return(a + b)
}

# Function to perform subtraction
subtract <- function(a, b) {
  return(a - b)
}

# Function to perform multiplication
multiply <- function(a, b) {
  return(a * b)
}

# Function to perform division
divide <- function(a, b) {
  if (b != 0) {
    return(a / b)
  } else {
    return("Error: Division by zero")
  }
}

# Input values
num1 <- 10
num2 <- 5

# Perform calculations
add_result <- add(num1, num2)
subtract_result <- subtract(num1, num2)
multiply_result <- multiply(num1, num2)
divide_result <- divide(num1, num2)

# Print the results
print(paste("Addition:", add_result))
print(paste("Subtraction:", subtract_result))
print(paste("Multiplication:", multiply_result))
print(paste("Division:", divide_result))

OUT PUT:
[1] "Addition: 15"
[1] "Subtraction: 5"
[1] "Multiplication: 50"
[1] "Division: 2"


# Function to convert Kelvin to Celsius
convert_kelvin_to_celsius <- function(kelvin) {
  celsius <- kelvin - 273.15
  return(celsius)
}

# Example usage
kelvin_temp <- 300.15  # Replace with the Kelvin temperature you want to convert
celsius_temp <- convert_kelvin_to_celsius(kelvin_temp)
print(celsius_temp)

OUT PUT:
Kelvin temperature: 300.15
Celsius temperature: 27

