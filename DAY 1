# Create a matrix
matrix1 <- matrix(c(1, 2, 3, 4, 5, 6), nrow = 2, ncol = 3)
matrix2 <- matrix(c(7, 8, 9, 10, 11, 12), nrow = 2, ncol = 3)

# Print the matrices
print(matrix1)
print(matrix2)

# Add two matrices
matrix_sum <- matrix1 + matrix2
print(matrix_sum)

#multiply
matrix_prod <- matrix1 + matrix2
print(matrix_prod)

OUT PUT :
Matrix 1
     [,1] [,2] [,3]
[1,]    1    3    5
[2,]    2    4    6

# Matrix 2
     [,1] [,2] [,3]
[1,]    7    9   11
[2,]    8   10   12

# Matrix Sum
     [,1] [,2] [,3]
[1,]    8   12   16
[2,]   10   14   18

# Matrix Product
     [,1] [,2]
[1,]   94  106
[2,]  122  139


