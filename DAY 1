# Create the data frame
members <- data.frame(
  Id = c(1, 2, 3, 4, 5),
  name = c("John", "Sarah", "Michael", "Emily", "David"),
  occupation = c("Engineer", "Doctor", "Teacher", "Lawyer", "Programmer"),
  employee = c(TRUE, FALSE, TRUE, FALSE, TRUE)
)

# Add the salary column
members$salary <- c(5000, 6000, 4500, 7000, 5500)

# Print the updated data frame
print(members)

OUT PUT:
Id    name occupation employee salary
1  1    John   Engineer     TRUE   5000
2  2   Sarah     Doctor    FALSE   6000
3  3 Michael    Teacher     TRUE   4500
4  4   Emily     Lawyer    FALSE   7000
5  5   David Programmer     TRUE   5500


# summary
print(summary(members))

OUTPUT:
